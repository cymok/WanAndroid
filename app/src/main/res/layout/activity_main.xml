                android:text="bt6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Matisse-Zhihu" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt8"
                android:layout_width="match_parent"
